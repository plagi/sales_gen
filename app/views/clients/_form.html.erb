    </div>
  </div>
  <div class="form-group">
    <%= f.label :legal_inn, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :legal_inn, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :legal_kpp, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :legal_kpp, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :legal_ogrn, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
