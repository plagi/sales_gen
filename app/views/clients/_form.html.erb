  </div>
  <div class="form-group">
    <%= f.label :post_address, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :post_address, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :legal_bank_name, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :legal_bank_name, :class => 'text-field form-control' %>
