<%= simple_form_for(@ad_account) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email %>
    <%= f.input :phone %>
    <%= f.input :login %>
    <%= f.input :token %>
    <%= f.input :data %>
    <%= f.association :client %>
    <%= f.input :deleted_at %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
